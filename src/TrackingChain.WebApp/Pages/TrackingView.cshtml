@page
@model TrackingChain.TriageWebApplication.Pages.TrackingViewModel
@{
}
<div class="text-center">
    <h1 class="display-4">Tracking View</h1>
    <form method="post">
        <table>
            <tr>
                <td>Tracking Id:</td>
                <td><input type="text" name="TrackingId" /></td>
            </tr>
            <tr>
                <td><input type="submit" value="Submit" asp-page-handler="Submit" /></td>
            </tr>
        </table>
        <hr />
        <div>
            @if (Model.TrackingProductModelViews.Any())
            {

                <h3>Code: @Model.TrackingProductModelViews.First().Code </h3>
            }
            @foreach (var item in Model.TrackingProductModelViews)
            {
                <p>
                    <span>Data Value: @item.DataValue</span>
                    <br />
                    <span>Timestamp: @item.Timestamp</span>
                </p>
            }
        </div>
        <span>@Model.Result</span>
    </form>
</div>