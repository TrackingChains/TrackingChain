@page
@model TrackingChain.TriageWebApplication.Pages.Admin.Smartcontracts.DeleteModel

@if (!Model.AlreadyUsedSmartContract)
{
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SmartContract.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SmartContract.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SmartContract.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SmartContract.Name)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="SmartContract.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
}
else
{
    <br />
    <br />
    <h3>You cannot remove smart contracts that have already been used for transaction</h3>
    <br />
    <a asp-page="./Index">Back to List</a>
    <br />
}