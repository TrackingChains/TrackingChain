@model TrackingChain.TriageWebApplication.Pages.Admin.AccountProfileGroups.CreateModel

<h4>Link Account To Profile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountProfileGroup.AccountId" class="control-label"></label>
                <select asp-for="AccountProfileGroup.AccountId" class ="form-control" asp-items="ViewBag.AccountId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AccountProfileGroup.ProfileGroupId" class="control-label"></label>
                <select asp-for="AccountProfileGroup.ProfileGroupId" class ="form-control" asp-items="ViewBag.ProfileGroupId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AccountProfileGroup.Priority" class="control-label"></label>
                <input asp-for="AccountProfileGroup.Priority" class="form-control" />
                <span asp-validation-for="AccountProfileGroup.Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

