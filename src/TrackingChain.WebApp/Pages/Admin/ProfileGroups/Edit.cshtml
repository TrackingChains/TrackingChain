<h4>Profile Group</h4>
<hr />
<div class="form-container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ProfileGroupBinding.Id" />
        <div class="form-group">
            <label asp-for="ProfileGroupBinding.AggregationCode" class="control-label"></label>
            <input asp-for="ProfileGroupBinding.AggregationCode" class="form-control" />
            <span asp-validation-for="ProfileGroupBinding.AggregationCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProfileGroupBinding.Authority" class="control-label"></label>
            <input asp-for="ProfileGroupBinding.Authority" class="form-control" />
            <span asp-validation-for="ProfileGroupBinding.Authority" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProfileGroupBinding.Category" class="control-label"></label>
            <input asp-for="ProfileGroupBinding.Category" class="form-control" />
            <span asp-validation-for="ProfileGroupBinding.Category" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProfileGroupBinding.Name" class="control-label"></label>
            <input asp-for="ProfileGroupBinding.Name" class="form-control" />
            <span asp-validation-for="ProfileGroupBinding.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProfileGroupBinding.SmartContractId" class="control-label"></label>
            <select asp-for="ProfileGroupBinding.SmartContractId" class="form-control" asp-items="ViewBag.SmartContractId"></select>
            <span asp-validation-for="ProfileGroupBinding.SmartContractId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProfileGroupBinding.Priority" class="control-label"></label>
            <input asp-for="ProfileGroupBinding.Priority" class="form-control" />
            <span asp-validation-for="ProfileGroupBinding.Priority" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
    <a asp-page="./Index" class="backedit-link">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
