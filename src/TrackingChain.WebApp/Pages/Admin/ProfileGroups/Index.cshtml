@page
@model TrackingChain.TriageWebApplication.Pages.Admin.ProfileGroups.IndexModel

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProfileGroup[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfileGroup[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfileGroup[0].SmartContract)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfileGroup[0].Priority)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProfileGroup)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SmartContract.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
